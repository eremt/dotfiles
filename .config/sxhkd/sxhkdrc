super + p
  rofi -show drun -show-icons

super + c
  dunstctl close-all

super + {i,u,o,m}
  scratchpads {terminal,audio,files,mail}

XF86AudioRaiseVolume
  desktop-utilities --volume +5%
XF86AudioLowerVolume
  desktop-utilities --volume -5%
XF86AudioMute
  desktop-utilities --volume toggle
XF86AudioMicMute
  pactl set-source-mute @DEFAULT_SOURCE@ toggle

XF86MonBrightnessUp
  desktop-utilities --brightness +5
XF86MonBrightnessDown
  desktop-utilities --brightness -5
