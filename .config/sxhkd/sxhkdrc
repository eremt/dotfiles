super + p
  rofi -show drun -show-icons

super + shift + Escape
  toggle-kbd

super + i
  alacritty \
  -t="Scratchpad" \
  --config-file=$HOME/.config/alacritty/scratchpad.yml

super + o
  alacritty \
  -t="Scratchpad" \
  --config-file=$HOME/.config/alacritty/scratchpad.yml \
  -e ranger

XF86AudioRaiseVolume
  pactl set-sink-volume @DEFAULT_SINK@ +5%
  # amixer set Master 5%+
XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -5%
  # amixer set Master 5%-
XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle
  # amixer set Master toggle
XF86AudioMicMute
  pactl set-source-mute @DEFAULT_SOURCE@ toggle

XF86MonBrightnessUp
  xbacklight -inc 5
XF86MonBrightnessDown
  xbacklight -dec 5
