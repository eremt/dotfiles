super + p
  rofi -show drun -show-icons

super + i
  alacritty \
  -t="Scratchpad" \
  --config-file=$HOME/.config/alacritty/scratchpad.yml

super + o
  alacritty \
  -t="Scratchpad" \
  --config-file=$HOME/.config/alacritty/scratchpad.yml \
  -e ranger

XF86AudioRaiseVolume
  amixer set Master 5%+
XF86AudioLowerVolume
  amixer set Master 5%-
XF86AudioMute
  amixer set Master toggle

XF86MonBrightnessUp
  xbacklight -inc 5
XF86MonBrightnessDown
  xbacklight -dec 5
