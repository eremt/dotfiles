[core]
  editor = nvim
  excludesfile = ~/.config/git/gitignore

[alias]
  st = status
  br = branch
  ci = commit
  co = checkout
  cob = checkout -b
  df = diff
  dfs = diff --staged
  dt = difftool -t nvimdiff --no-prompt
  mt = mergetool -t nvimdiff --no-prompt
  lg = log --pretty='format:%Cblue%h%Creset: %aN %Cgreen%d%Creset%n  %s%n'
